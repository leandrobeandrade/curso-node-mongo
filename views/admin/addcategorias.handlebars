{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show">{{texto}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{else}}

{{/each}}

<h1>Nova Categoria</h1>
<div class="card cat">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" id="nome" placeholder="Nome das categorias" class="form-control">

            <label for="slug" class="mt-3">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control">

            <button type="submit" class="btn btn-success mt-4 float-right">Criar Categoria</button>
            <a href="/admin/categorias"><button type="button" class="btn btn-primary mt-4 mr-2 float-right">Cancelar</button></a>
        </form>
    </div>
</div>