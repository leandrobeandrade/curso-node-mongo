{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show">{{texto}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{else}}

{{/each}}

<h1>Nova Postagem</h1>
<div class="card mb-5">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="titulo" placeholder="Título da postagem" class="form-control">

            <label for="slug" class="mt-3">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="Slug da postagem" class="form-control">
            
            <label for="descricao" class="mt-3">Descrição:</label>
            <input type="text" name="descricao" id="descricao" placeholder="Descrição da postagem" class="form-control">

            <label for="conteudo" class="mt-3">Conteúdo:</label>
            <textarea name="conteudo" class="form-control" id="conteudo" cols="30" rows="2"></textarea>

            <label for="categoria" class="mt-3">Categoria:</label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success float-right mt-4">Criar Postagem</button>
            <a href="/admin/postagens"><button type="button" class="btn btn-primary float-right mt-4 mr-3">Cancelar</button></a>
        </form>
    </div>
</div>

