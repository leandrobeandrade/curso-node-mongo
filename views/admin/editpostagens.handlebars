{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show">{{texto}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{else}}

{{/each}}
<h1>Editar Postagem</h1>
<div class="card mb-5">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">

            <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="titulo" placeholder="Título da postagem" class="form-control" value="{{postagem.titulo}}">

            <label for="slug" class="mt-3">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="Slug da postagem" class="form-control" value="{{postagem.slug}}">
            
            <label for="descricao" class="mt-3">Descrição:</label>
            <input type="text" name="descricao" id="descricao" placeholder="Descrição da postagem" class="form-control" value="{{postagem.descricao}}">

            <label for="conteudo" class="mt-3">Conteúdo:</label>
            <textarea name="conteudo" class="form-control" id="conteudo" cols="30" rows="2">{{postagem.conteudo}}</textarea>

            <label for="categoria" class="mt-3">Categoria:</label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-4 float-right">Editar Categoria</button>
            <a href="/admin/postagens"><button type="button" class="btn btn-primary mt-4 mr-2 float-right">Cancelar</button></a>
        </form>
    </div>
</div>
<br><br>