<h2>Lista de Postagens 
    <a href="/admin/postagens/add" class="float-right">
        <button class="btn btn-success">Nova Postagem</button>
    </a>
</h2>

{{#each postagens}}
<div class="card mt-4 mb-5">
    <div class="card-body">
        <h4>{{titulo}}
            <span class="ml-5">
                <a href="/admin/postagens/edit/{{id}}"><button class="btn btn-warning btn-outline btn-sm">Editar</button></a>
            </span>
        </h4>
        <p>Descrição: {{descricao}}</p>
        <p>Conteúdo: {{conteudo}}</p>
        <small>Data: {{data}}</small>
        <p>Categoria: {{categoria.nome}}</p>
        <form action="/admin/postagens/delete/{{_id}}" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger float-right">Excluir</button>
        </form>
    </div>
</div>
{{else}}
<div class="card mt-3">
  <div class="card-body">
    Nenhuma postagem cadastrada!
  </div>
</div>
{{/each}}

<br><br>

<script>
    let alerta = document.getElementsByClassName('alert')[0]

    if(alerta) {
        setTimeout(() => {
            alerta.style.display = 'none';
        }, 3000)
    }
</script>