<h1 class="text-center">Criar Conta</h1>

<div class="row justify-content-md-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form action="" method="POST">
                    <label for="nome">Nome:</label>
                    <input type="text" class="form-control" name="nome" id="nome" placeholder="Digite o seu nome">
                    
                    <label for="email" class="mt-3">Email:</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Digite um email">
                    
                    <label for="senha" class="mt-3">Senha:</label>
                    <input type="password" class="form-control" name="senha" id="senha" placeholder="Digite sua senha">

                    <label for="senha2" class="mt-3">Repita a Senha:</label>
                    <input type="password" class="form-control" name="senha2" id="senha2" placeholder="Repita sua senha">
                
                    <button type="submit" class="btn btn-primary float-right mt-3">Criar conta</button>
                </form>
            </div>
        </div>
    </div>
</div>