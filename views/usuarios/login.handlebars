<h1 class="text-center">Fazer Login</h1>

<div class="row justify-content-md-center login">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form action="/usuarios/login" method="POST">
                    <label for="email" class="mt-3">Email:</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Digite seu email">

                    <label for="senha" class="mt-3">Senha:</label>
                    <input type="password" class="form-control" name="senha" id="senha" placeholder="Digite sua senha">
                    
                    <button type="submit" class="btn btn-success float-right mt-3">Logar</button>
                </form>
            </div>
        </div>
    </div>
</div>